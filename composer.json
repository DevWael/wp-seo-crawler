{
	"name": "wp-media/package-template",
	"description": "Repository template for our packages",
	"homepage": "https://github.com/wp-media/package-template",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Ahmad Wael",
			"email": "dev.ahmedwael@gmail.com",
			"homepage": "https://www.bbioon.com"
		}
	],
	"minimum-stability": "stable",
	"type": "library",
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"support": {
		"issues": "https://github.com/DevWael/wp-seo-crawler/issues",
		"source": "https://github.com/DevWael/wp-seo-crawler"
	},
	"require": {
		"php": ">=7.4",
		"ext-json": "*"
	},
	"require-dev": {
		"php": "^5.6 || ^8",
		"brain/monkey": "^2.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0.0",
		"phpcompatibility/phpcompatibility-wp": "^2.1.4",
		"phpunit/phpunit": "^5.7 || ^8",
		"wp-coding-standards/wpcs": "^2.3.0",
		"wp-media/phpunit": "v3.0.3"
	},
	"autoload": {},
	"autoload-dev": {},
	"scripts": {
		"test-unit": "\"vendor/bin/wpmedia-phpunit\" unit path=Tests/Unit",
		"test-integration": "\"vendor/bin/wpmedia-phpunit\" integration path=Tests/Integration/",
		"run-tests": [
			"@test-unit",
			"@test-integration"
		],
		"install-codestandards": "Dealerdirect\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run",
		"phpcs": "phpcs --basepath=.",
		"phpcs-changed": "./bin/phpcs-changed.sh",
		"phpcs:fix": "phpcbf",
		"qa": [
			"@phpcs",
			"@test-unit"
		]
	}
}
